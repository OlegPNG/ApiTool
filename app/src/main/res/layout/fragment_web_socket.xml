<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".webSocketFragment">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ws_url_row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ws_url_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:text="@string/ws_url_prompt" />

        <EditText
            android:id="@+id/ws_url_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="@id/ws_url_prompt"
            app:layout_constraintStart_toEndOf="@id/ws_url_prompt"
            app:layout_constraintBottom_toBottomOf="@id/ws_url_prompt"
            android:hint="@string/url_hint"/>

        <Button
            android:id="@+id/ws_url_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@id/ws_url_input"
            app:layout_constraintStart_toEndof="@id/ws_url_input"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            android:text="@string/ws_connect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ws_url_row">

        <TextView
            android:id="@+id/ws_response_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ws_response"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/ws_response_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ws_response_label"
            android:textSize="16sp"
            android:padding="8dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
