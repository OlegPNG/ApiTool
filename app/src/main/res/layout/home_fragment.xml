<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.beck.apitool.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        tools:context=".HomeFragment">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/url_row"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/url_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/url_prompt"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/EditTextStyle"
                android:layout_marginHorizontal="8dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="4dp"
                android:inputType="text"
                android:hint="@string/url_hint"
                android:text="@={viewModel.url}"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/url_prompt"
                app:layout_constraintStart_toEndOf="@id/url_prompt"
                app:layout_constraintBottom_toBottomOf="@id/url_prompt"/>
        </LinearLayout>
        <TextView
            android:id="@+id/body_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/url_row"
            android:text="@string/body_prompt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="8dp"
            style="@style/EditTextStyle"
            app:layout_constraintTop_toBottomOf="@id/body_prompt"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:text="@={viewModel.request_body}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/response_view"
            android:paddingBottom="4dp"
            android:text="@string/response_prompt"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/response_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            style="@style/EditTextStyle"
            android:text="@={viewModel.responseView}"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>